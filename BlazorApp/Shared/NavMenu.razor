<MudNavMenu>
    <div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
        <nav class="flex-column">

            <div class="nav-item px-3">
                <MudNavLink class="nav-link" Href="/" Match="NavLinkMatch.All">
                    <span class="oi oi-home" aria-hidden="true"></span> Home
                </MudNavLink>
            </div>
            <div class="nav-item px-3">
                <MudNavLink class="nav-link" Href="/demoHotel" Match="NavLinkMatch.Prefix">
                    <span class="oi oi-plus" aria-hidden="true"></span> Demo Hotel
                </MudNavLink>
            </div>
            <div class="nav-item px-3">
                        <MudNavLink class="nav-link" Href="/hotel-room" Match="NavLinkMatch.Prefix">
                            <span class="oi oi-plus" aria-hidden="true"></span> Hotel Room
                        </MudNavLink>
                    </div>
             <div class="nav-item px-3">
                        <MudNavLink class="nav-link" Href="/booking" Match="NavLinkMatch.Prefix">
                            <span class="oi oi-plus" aria-hidden="true"></span> Booking Report
                        </MudNavLink>
                    </div>
            <AuthorizeView>
                <Authorized>
                    
                    <div class="nav-item px-3">
                        <MudNavLink class="nav-link" Href="hotel-amenity" Match="NavLinkMatch.Prefix">
                            <span class="oi oi-list-rich" aria-hidden="true"></span> Hotel Amenities
                        </MudNavLink>
                    </div>
                    <div class="nav-item px-3">
                        <MudNavLink class="nav-link" href="logout">
                            <span class="oi oi-list-rich" aria-hidden="true"></span> Logout
                        </MudNavLink>
                    </div>
                </Authorized>

                <NotAuthorized>
                    <li class="nav-item px-3">
                        <MudNavLink class="nav-link" href="login" Match="NavLinkMatch.Prefix">
                            <span class="oi oi-list-rich" aria-hidden="true"></span> Login
                        </MudNavLink>
                    </li>
                </NotAuthorized>
            </AuthorizeView>
        </nav>
    </div>

</MudNavMenu>

